{
  "name": "apexlink-gulp",
  "version": "1.1.0",
  "description": "Library for downloading Salesforce metdata suitable for use with apexlink",
  "author": {
    "name": "Kevin Jones",
    "email": "nawforce@gmail.com",
    "url": "https://github.com/nawforce"
  },
  "main": "./lib/gulp.js",
  "license": "BSD-3-Clause",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "coverage": "codecov",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nawforce/apex-link-gulp.git"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "salesforce",
    "apex",
    "apexlink"
  ],
  "bugs": {
    "url": "https://github.com/nawforce/apex-link-gulp/issues"
  },
  "homepage": "https://github.com/nawforce/apex-link-gulp#readme",
  "dependencies": {
    "@salesforce/core": "2.36.1",
    "decompress": "4.2.1",
    "fast-xml-parser": "4.0.4",
    "jsforce": "1.11.0",
    "rimraf": "3.0.2"
  },
  "devDependencies": {
    "@types/decompress": "^4.2.4",
    "@types/jest": "^26.0.24",
    "@types/jsforce": "^1.9.41",
    "@types/node": "^12.20.11",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "codecov": "^3.8.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
